@model PrescriptionViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    Prescription's data:
    Name: @Model.Name
</div>

<input type="text" value="" />

<<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>            
        </thead>
        <tbody>
            @foreach (var medicine in Model.Medicines)
            {
                <tr>
                    <th scope="row">@(Model.Medicines.IndexOf(medicine) + 1)</th>
                    <td>@medicine.Name</td>
                    <td>
                        <a asp-area="" asp-controller="Medicine" asp-route-indexOfMedicine="@Model.Medicines.IndexOf(medicine)" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
