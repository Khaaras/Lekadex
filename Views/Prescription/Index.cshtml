@model DoctorViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    Doctors's data:
    Name: @Model.Name
</div>

<input type="text" value="" />

<<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                <tr>
                    <th scope="row">@(Model.Prescriptions.IndexOf(prescription) + 1)</th>
                    <td>@prescription.Name</td>
                    <td><a asp-area="" asp-controller="Prescription" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)" asp-action="View">View</a>
                        | 
                        <a asp-area="" asp-controller="Prescription" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
